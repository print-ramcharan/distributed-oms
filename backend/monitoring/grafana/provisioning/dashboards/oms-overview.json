{
  "title": "Distributed OMS - Service Overview",
  "uid": "oms-overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "timezone": "browser",
  "tags": ["oms", "spring-boot"],
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_server_requests_seconds_count{service!=\"\"}[1m]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Error Rate (5xx)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_server_requests_seconds_count{status=~\"5..\", service!=\"\"}[1m]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "P99 Latency (ms)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (service, le) (rate(http_server_requests_seconds_bucket{service!=\"\"}[1m]))) * 1000",
          "legendFormat": "{{service}} p99",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "ms"
        }
      }
    },
    {
      "id": 4,
      "title": "JVM Heap Used (MB)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\", service!=\"\"} / 1024 / 1024",
          "legendFormat": "{{service}} heap",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "megabytes"
        }
      }
    },
    {
      "id": 5,
      "title": "Kafka Consumer Lag",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "kafka_consumer_fetch_manager_records_lag{service!=\"\"}",
          "legendFormat": "{{service}} / {{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "short"
        }
      }
    },
    {
      "id": 6,
      "title": "DB Connection Pool - Active",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "hikaricp_connections_active{service!=\"\"}",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "unit": "short"
        }
      }
    },
    {
      "id": 7,
      "title": "Services UP",
      "type": "stat",
      "gridPos": { "x": 0, "y": 24, "w": 8, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "count(up == 1)",
          "legendFormat": "Services UP",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 4 },
              { "color": "green", "value": 6 }
            ]
          },
          "unit": "short",
          "mappings": []
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "auto", "colorMode": "background" }
    },
    {
      "id": 8,
      "title": "Total HTTP Requests (last 15m)",
      "type": "stat",
      "gridPos": { "x": 8, "y": 24, "w": 8, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(increase(http_server_requests_seconds_count{service!=\"\"}[15m]))",
          "legendFormat": "Total Requests",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] },
          "unit": "short"
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "auto", "colorMode": "background" }
    },
    {
      "id": 9,
      "title": "Avg HTTP Latency (ms, last 15m)",
      "type": "stat",
      "gridPos": { "x": 16, "y": 24, "w": 8, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "1000 * sum(rate(http_server_requests_seconds_sum{service!=\"\"}[15m])) / sum(rate(http_server_requests_seconds_count{service!=\"\"}[15m]))",
          "legendFormat": "Avg Latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 200 },
              { "color": "red", "value": 1000 }
            ]
          },
          "unit": "ms"
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "auto", "colorMode": "background" }
    }
  ]
}
